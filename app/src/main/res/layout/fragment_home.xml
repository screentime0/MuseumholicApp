<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tickets"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/surface"
        android:fontFamily="@font/roboto_slab_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="24dp" />

    <!-- ScrollView for scrolling multiple ticket entries -->
    <ScrollView
        android:id="@+id/scrollViewTickets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Container for all ticket entries -->
        <LinearLayout
            android:id="@+id/ticketListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Ticket 1 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorSurface">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/museum1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Art and History Museum"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/roboto_slab_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/museum1Tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tickets: 2x Adult, 1x Child"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum1Name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/museum1OpeningTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opening Times: 9:00 AM - 6:00 PM"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum1Tickets"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ticket 2 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorSurface">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/museum2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Science and Space Museum"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/roboto_slab_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/museum2Tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tickets: 1x Adult, 2x Child"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum2Name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/museum2OpeningTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opening Times: 10:00 AM - 8:00 PM"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum2Tickets"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ticket 3 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/colorSurface">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/museum3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Natural History Museum"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/roboto_slab_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/museum3Tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tickets: 3x Adult"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum3Name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:id="@+id/museum3OpeningTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opening Times: 8:00 AM - 5:00 PM"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurface"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_slab_medium"
                        app:layout_constraintTop_toBottomOf="@id/museum3Tickets"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
